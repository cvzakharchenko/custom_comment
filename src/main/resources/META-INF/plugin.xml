<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.cvzakharchenko.customcomment</id>
    <name>custom_comment</name>
    <vendor>cvzakharchenko</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Settings page -->
        <applicationConfigurable
                id="com.github.cvzakharchenko.customcomment.settings"
                displayName="Custom Comment"
                instance="com.github.cvzakharchenko.customcomment.settings.CustomCommentConfigurable"/>
    </extensions>

    <actions>
        <action id="com.github.cvzakharchenko.customcomment.ToggleCustomCommentAction"
                class="com.github.cvzakharchenko.customcomment.actions.ToggleCustomCommentAction"
                text="Toggle Custom Comment"
                description="Toggle a custom configurable comment prefix on selected lines">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
